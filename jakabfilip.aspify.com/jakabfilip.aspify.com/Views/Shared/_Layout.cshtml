<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title – Moje aplikace ASP.NET</title>
	@Styles.Render("~/Content/MaterializeCss")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
</head>
<body>
	@if (ViewData["CurrentUser"] != null)
	{
		<div class="ui grid">
			<nav class="sixteen wide column">
				<div class="ui menu">
					@Html.ActionLink("Home Page", "Index", "Home", null, new { @class = "header item" })
					@Html.ActionLink("Link 1", "Index", "Home", null, new { @class = "item" })
					@Html.ActionLink("Link 2", "Index", "Home", null, new { @class = "item" })
					@Html.ActionLink("Link 3", "Index", "Home", null, new { @class = "item" })
				</div>
			</nav>
		</div>
	}
	<div class="full height">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year – Prestige Application for the most prestige purposes</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/MaterializeJs")
	@RenderSection("scripts", required: false)
</body>
</html>
